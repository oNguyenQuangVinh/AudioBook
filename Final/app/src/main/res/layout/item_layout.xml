<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView69"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:src="@drawable/mylogo"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/txtTitle69"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="aaaaaaaaaaaaaaaaaaa"
            android:textColor="#446cdc"
            android:textSize="20dp"
            android:textStyle="italic|bold"
            />

        <TextView
            android:id="@+id/txtContent69"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="bbbbbbbbbbbbbbbbbbbbbbb"
            android:textColor="#1c1d20"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.5"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/iconFavorite69"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_favorite_border" />
    </LinearLayout>

</LinearLayout>